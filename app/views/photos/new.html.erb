<div class="row">

    <div class="col-6 offset-3 col-xl-6 offset-3 col-lg-6 offset-3 col-md-6 offset-3 col-sm-12 col-xs-12">

        <h1>Subir Nueva Fotografía</h1>

        <%= form_with(model: @photo, local: true, html: { class: 'form-horizontal' }) do |form| %>

            <div class="form-group mt-3">
                <%= form.label :title, "Título", class: 'control-label' %>
                <%= form.text_field :title, required: true, class: 'form-control' %>
            </div>

            <div class="form-group mt-3">
                <%= form.label :description, "Descripción", class: 'control-label' %>
                <%= form.text_area :description, required: true, class: 'form-control' %>
            </div>

            <div class="form-group mt-3">
                <%= form.label :image, "Imagen", class: 'control-label' %>
                <%= form.file_field :image, required: true, class: 'form-control' %>
            </div>

            <div class="form-group mt-3">
                <%= form.submit 'Subir Fotografía', class: 'btn btn-primary btn-sm' %>
                <%= link_to 'Volver a la lista de fotografías', photos_path, class: 'btn btn-secondary btn-sm' %>
            </div>

        <% end %>

    </div>

</div>
    